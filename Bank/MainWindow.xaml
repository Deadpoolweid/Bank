        mc:Ignorable="d"
        Title="Кредитные расчёты" Height="350" Width="561.667">
    <Grid>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="517">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>
        </Menu>
        <Label x:Name="label" Content="Сумма покупки" HorizontalAlignment="Left" Margin="10,48,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Первый взнос" HorizontalAlignment="Left" Margin="10,74,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Срок кредита" HorizontalAlignment="Left" Margin="10,105,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label3" Content="Годовой процент" HorizontalAlignment="Left" Margin="10,136,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="128,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="23" Margin="128,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBox2" HorizontalAlignment="Left" Height="23" Margin="128,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBox3" HorizontalAlignment="Left" Height="23" Margin="128,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="347,52,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Дифференцированный" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Аннуитетный" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>
        <Label x:Name="label4" Content="Тип платежа" HorizontalAlignment="Left" Margin="268,48,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBox" Content="Обслуживание счёта" HorizontalAlignment="Left" Margin="264,97,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label5" Content="Сумма обслуживания" HorizontalAlignment="Left" Margin="404,78,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox4" HorizontalAlignment="Left" Height="23" Margin="408,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>

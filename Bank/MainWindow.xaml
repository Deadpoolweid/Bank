<Window x:Class="Bank.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank"
        mc:Ignorable="d"
        Title="Кредитные расчёты" SizeToContent="WidthAndHeight" WindowState="Maximized" Width="{DynamicResource {x:Static SystemParameters.MaximizedPrimaryScreenWidthKey}}" Height="{DynamicResource {x:Static SystemParameters.MaximizedPrimaryScreenHeightKey}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <DockPanel x:Name="dpTop" Grid.Row="0" Dock="Top" HorizontalAlignment="Left" Height="18" LastChildFill="False" VerticalAlignment="Top" Width="1376" MinWidth="{DynamicResource {x:Static SystemParameters.MaximizedPrimaryScreenWidthKey}}" Margin="0,0,-8,0">
            <Menu x:Name="menu" HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="{DynamicResource {x:Static SystemParameters.MaximizedPrimaryScreenWidthKey}}">
                <MenuItem Header="Файл" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center">
                    <MenuItem Header="Выход" HorizontalAlignment="Left" Width="140"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <StackPanel Grid.Row="1" Margin="0,0,-8,0" VerticalAlignment="Top" Orientation="Horizontal" MinWidth="{DynamicResource {x:Static SystemParameters.MaximizedPrimaryScreenWidthKey}}">
            <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Label x:Name="label" Content="Сумма покупки" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Label x:Name="label1" Content="Первый взнос" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Label x:Name="label2" Content="Срок кредита" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Label x:Name="label3" Content="Годовой процент" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Left" Height="100" Margin="0,5,0,0" VerticalAlignment="Top" Width="121">
                    <TextBox x:Name="tS" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="100000"/>
                    <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="tN" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="24"/>
                    <TextBox x:Name="tP" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="10"/>
                </StackPanel>
            </StackPanel>
            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="216" Orientation="Horizontal">
                    <Label x:Name="label4" Content="Тип платежа" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <ComboBox x:Name="cbPayment" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120">
                        <ComboBoxItem Content="Дифференцированный" HorizontalAlignment="Left" Width="118"/>
                        <ComboBoxItem Content="Аннуитетный" HorizontalAlignment="Left" Width="118"/>
                    </ComboBox>
                </StackPanel>
                <StackPanel HorizontalAlignment="Left" Height="52" VerticalAlignment="Top" Width="268" Orientation="Horizontal">
                    <CheckBox x:Name="checkBox" Content="Обслуживание счёта" HorizontalAlignment="Left" Margin="0,18,0,0" VerticalAlignment="Top"/>
                    <StackPanel HorizontalAlignment="Left" Height="54" VerticalAlignment="Top" Width="140">
                        <Label x:Name="label5" Content="Сумма обслуживания" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        <TextBox x:Name="textBox4" HorizontalAlignment="Left" Height="23" Margin="4,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    </StackPanel>
                </StackPanel>
                <Button x:Name="bCalculate" Content="Расчитать" HorizontalAlignment="Left" Margin="9,0,0,0" VerticalAlignment="Top" Width="75" Click="bCalculate_Click"/>
            </StackPanel>
        </StackPanel>
        <DockPanel x:Name="dpBottom" Grid.Row="2" Dock="Bottom" HorizontalAlignment="Left" LastChildFill="False" Margin="0,10,0,0" VerticalAlignment="Top" Height="580" Width="1368">
            <DataGrid x:Name="dgResults" VerticalAlignment="Top" HorizontalAlignment="Left" MinWidth="{DynamicResource {x:Static SystemParameters.MaximizedPrimaryScreenWidthKey}}" DockPanel.Dock="Top"/>
        </DockPanel>

    </Grid>
</Window>
